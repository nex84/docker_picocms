<div class="SearchResults">
    {% if pages %}
        {% for page in pages %}
            <div class="SearchResult">
                <h2><a href="{{ page.url }}">{{ page.title }}</a></h2>
                {% if page.description %}<p>{{ page.description }}</p>{% endif %}
            </div>
        {% endfor %}
    {% else %}
        <p>No results found.</p>
    {% endif %}
</div>
